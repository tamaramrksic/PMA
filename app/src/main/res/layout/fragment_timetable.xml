<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cinema10"
    >

    <TextView
        android:id="@+id/timetable_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/show_name_value"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/date_label" />

    <Spinner
        android:id="@+id/timetable_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/time_label" />

    <Spinner
        android:id="@+id/timetable_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/hall_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/hall_label" />

    <Spinner
        android:id="@+id/timetable_hall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorText"
        android:layout_marginTop="50dp"
        android:text="@string/next" />

</LinearLayout>