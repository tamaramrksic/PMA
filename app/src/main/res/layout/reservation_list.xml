<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/show_reserved_poster"
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/show_reserved_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/show_reserved_poster"
        android:padding="2dp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@id/show_reserved_title"
        android:layout_toEndOf="@id/show_reserved_poster">

        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/date_value"
            android:textColor="#717171"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/ic_date"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/time_value"
            android:drawableLeft="@drawable/ic_time"
            android:layout_marginStart="10dp"
            android:textColor="#717171"
            android:textAppearance="?android:attr/textAppearanceMedium"/>


    </LinearLayout>

    <TextView
        android:id="@+id/show_reserved_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:drawableStart="@drawable/ic_action_star"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

</RelativeLayout>